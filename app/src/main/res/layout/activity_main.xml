<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mord.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <Button
        android:text="termButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/termButton" />

    <Button
        android:text="termDetailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/termButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/termDetailButton" />

    <Button
        android:text="courseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/termDetailButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/courseButton" />

    <Button
        android:text="courseDetailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/termButton"
        android:layout_alignRight="@+id/termButton"
        android:layout_alignEnd="@+id/termButton"
        android:layout_marginTop="20dp"
        android:id="@+id/courseDetailButton" />

    <Button
        android:text="assessmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/courseDetailButton"
        android:layout_alignLeft="@+id/termDetailButton"
        android:layout_alignStart="@+id/termDetailButton"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:id="@+id/assessmentButton" />

    <Button
        android:text="assessmentDetailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/assessmentButton"
        android:layout_alignLeft="@+id/courseButton"
        android:layout_alignStart="@+id/courseButton"
        android:id="@+id/assessmentDetailButton" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_alignTop="@+id/assessmentButton"
        android:id="@+id/mainList"/>

    <at.markushi.ui.CircleButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cb_color="@color/colorPrimary"
        app:cb_pressedRingWidth="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="openEditorForNewNote"
        android:src="@drawable/ic_launcher"
        />


</RelativeLayout>
